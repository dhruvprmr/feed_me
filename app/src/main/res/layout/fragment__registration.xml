                            android:fontFamily="@font/quicksand_bold"
                            android:gravity="center"
                            android:text="Register"
                            android:textSize="15dp"
                            android:layout_marginTop="15dp"/>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

